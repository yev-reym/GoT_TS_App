{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src/",
        "isolatedModules": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./build",
        "paths": {
          "Components/*": ["components/*"],
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6"
      },
      "include": ["./src/components/*", "./src/contexts/*", "./src/hooks/*", ".src/utils/*", "./src/types/*" ],
      "exclude": [
        "node_modules",
        "./build/"
      ]
}