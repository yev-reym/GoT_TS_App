{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src/",
        "isolatedModules": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./build",
        "paths": {
          "Components/*": ["components/*"],
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6"
      },
      "include": ["./src/"],
      "exclude": [
        "node_modules",
        "./build/"
      ]
}